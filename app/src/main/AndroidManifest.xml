<?xml version="1.0" encoding="utf-8"?>
<manifest package="ua.com.zak.budgetswing"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".BudgetApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service
            android:name=".service.BudgetService"
            android:enabled="true"
            android:exported="false">
        </service>

        <activity
            android:name=".activity.AddTransactionActivity"
            android:label="@string/make_transaction_label"
            android:parentActivityName=".activity.MainActivity"
            android:theme="@style/SlideBottomAnimTheme">
        </activity>

    </application>

</manifest>
