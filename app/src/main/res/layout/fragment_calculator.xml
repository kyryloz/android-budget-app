<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_calculator"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:contentInsetStart="72dp"
            app:layout_collapseMode="none"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"/>
    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif-thin"
            android:textAppearance="@android:style/TextAppearance.Material.Display3"
            tools:text="24 + 10"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/back"
            style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_marginEnd="16dp"
            android:text="Back"/>
    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/dividerVertical"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:clipChildren="false"
        android:columnCount="4"
        tools:ignore="HardcodedText">

        <TextView
            android:id="@+id/digit_7"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="7"/>

        <TextView
            android:id="@+id/digit_8"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:elevation="0dp"
            android:text="8"/>

        <TextView
            android:id="@+id/digit_9"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="9"/>

        <TextView
            android:id="@+id/operation_divide"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="&#247;"/>

        <TextView
            android:id="@+id/digit_4"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="4"/>

        <TextView
            android:id="@+id/digit_5"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="5"/>

        <TextView
            android:id="@+id/digit_6"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="6"/>

        <TextView
            android:id="@+id/operation_multiply"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="&#215;"/>

        <TextView
            android:id="@+id/digit_1"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="1"/>

        <TextView
            android:id="@+id/digit_2"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="2"/>

        <TextView
            android:id="@+id/digit_3"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="3"/>

        <TextView
            android:id="@+id/operation_minus"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="&#8722;"/>

        <TextView
            android:id="@+id/dot"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="."/>

        <TextView
            android:id="@+id/digit_0"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="0"/>

        <TextView
            android:id="@+id/calculate"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:background="?attr/colorAccent"
            android:foreground="?attr/selectableItemBackground"
            android:text="&#61;"/>

        <TextView
            android:id="@+id/operation_plus"
            style="@style/CalculatorButton"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_rowWeight="1"
            android:text="&#43;"/>

    </GridLayout>

</LinearLayout>